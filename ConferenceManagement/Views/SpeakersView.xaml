<UserControl x:Class="WebinarApp.Views.SpeakersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DataGrid x:Name="SpeakersDataGrid" ItemsSource="{Binding Speakers}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ім'я" Binding="{Binding FirstName}" Width="*"/>
                <DataGridTextColumn Header="Прізвище" Binding="{Binding LastName}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
