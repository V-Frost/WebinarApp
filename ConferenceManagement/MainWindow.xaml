<Window x:Class="WebinarApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Webinar Management System"
        Height="600" Width="800"
        WindowState="Maximized">

    <Grid>
        <!-- Панель навігації з кнопками -->
        <StackPanel Orientation="Vertical" Width="200" Background="#FF2D2D30" HorizontalAlignment="Left">
            <Button x:Name="NavigateToWebinarsButton" Content="Вебінари" Height="50" Margin="10" Click="NavigateToWebinars"/>
            <Button x:Name="NavigateToSpeakersButton" Content="Спікери" Height="50" Margin="10" Click="NavigateToSpeakers"/>
            <Button x:Name="NavigateToParticipantsButton" Content="Учасники" Height="50" Margin="10" Click="NavigateToParticipants"/>
            <Button x:Name="NavigateToRegistrationsButton" Content="Реєстрації" Height="50" Margin="10" Click="NavigateToRegistrations"/>
        </StackPanel>

        <!-- Основний вміст -->
        <Frame x:Name="MainFrame" Margin="200,0,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
